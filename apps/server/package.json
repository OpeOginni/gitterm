{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.mjs",
    "db:seed-admin": "bun run scripts/seed-admin.ts",
    "db:seed-admin:prod": "bun run dist/scripts/seed-admin.mjs"
  },
  "dependencies": {
    "hono": "catalog:",
    "@trpc/server": "catalog:",
    "@hono/trpc-server": "^0.4.0",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.5",
    "pg": "^8.14.1",
    "@gitterm/api": "workspace:*",
    "@gitterm/auth": "workspace:*",
    "@gitterm/db": "workspace:*",
    "@gitterm/env": "workspace:*",
    "@gitterm/schema": "workspace:*",
    "@gitterm/redis": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "^1.2.6",
    "tsdown": "^0.16.5",
    "@gitterm/config": "workspace:*"
  }
}
