{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "turbo build --filter=proxy",
    "watchPatterns": [
      "apps/proxy/**/*",
      "packages/api/**/*",
      "packages/auth/**/*",
      "packages/config/**/*",
      "apps/proxy/.env*",
      "turbo.json",
      "package.json",
      "bun.lock"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/proxy && bun run dist/index.mjs",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}