{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "turbo build --filter=web",
    "watchPatterns": [
      "apps/web/**/*",
      "packages/api/**/*",
      "packages/auth/**/*",
      "packages/config/**/*",
      "apps/web/.env*",
      "turbo.json",
      "package.json",
      "bun.lock"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/web && npm run start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
