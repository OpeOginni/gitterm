# =============================================================================
# WEB APP CONFIGURATION
# =============================================================================
#
# Local Development:
# NEXT_PUBLIC_SERVER_URL=http://localhost:8888/api
# NEXT_PUBLIC_AUTH_URL=http://localhost:8888
# NEXT_PUBLIC_LISTENER_URL=http://localhost:8888/listener
# NEXT_PUBLIC_BASE_DOMAIN=localhost
#
# Production:
# NEXT_PUBLIC_SERVER_URL=https://api.gitterm.dev
# NEXT_PUBLIC_AUTH_URL=https://api.gitterm.dev
# NEXT_PUBLIC_LISTENER_URL=https://listener.gitterm.dev
# NEXT_PUBLIC_BASE_DOMAIN=gitterm.dev
# =============================================================================

# =============================================================================
# DEPLOYMENT MODE (Client-side features)
# =============================================================================
# Enable billing UI components (checkout buttons, subscription management)
# Set to "true" only when billing is configured on the server
# =============================================================================

NEXT_PUBLIC_ENABLE_BILLING=false

# Base domain for workspace URL fallback (when backendUrl is not available)
NEXT_PUBLIC_BASE_DOMAIN=gitterm.dev

# API server URL (for tRPC)
NEXT_PUBLIC_SERVER_URL=

# Auth URL (for better-auth) - do NOT include /api suffix
# better-auth automatically appends /api/auth to this URL
NEXT_PUBLIC_AUTH_URL=

# Listener URL (for SSE/real-time updates)
NEXT_PUBLIC_LISTENER_URL=

# GitHub App name (for OAuth)
NEXT_PUBLIC_GITHUB_APP_NAME=
