# =============================================================================
# WEB APP CONFIGURATION
# =============================================================================

# Base domain for workspace URL display
NEXT_PUBLIC_BASE_DOMAIN=localhost

# Routing mode: "path" or "subdomain"
# - path: Single domain with path-based routing (Railway unified / self-hosted)
# - subdomain: Wildcard DNS with subdomain routing (*.gitterm.dev)
NEXT_PUBLIC_ROUTING_MODE=path

# Authentication methods (at least one must be enabled)
NEXT_PUBLIC_ENABLE_EMAIL_AUTH=true
NEXT_PUBLIC_ENABLE_GITHUB_AUTH=false

# =============================================================================
# SERVICE URLS
# =============================================================================
# When using unified routing (ROUTING_MODE=railway in proxy), all services
# are accessed through path-based URLs on the same domain.
#
# For local development (via Caddy at localhost:8888):
#   NEXT_PUBLIC_SERVER_URL=http://localhost:8888/api
#   NEXT_PUBLIC_AUTH_URL=http://localhost:8888
#   NEXT_PUBLIC_LISTENER_URL=http://localhost:8888/listener
#   NEXT_PUBLIC_TUNNEL_URL=http://localhost:8888/tunnel
#
# For Railway unified deployment (all behind proxy.example.com):
#   NEXT_PUBLIC_SERVER_URL=https://proxy.example.com/api
#   NEXT_PUBLIC_AUTH_URL=https://proxy.example.com
#   NEXT_PUBLIC_LISTENER_URL=https://proxy.example.com/listener
#   NEXT_PUBLIC_TUNNEL_URL=https://proxy.example.com/tunnel
# =============================================================================

# API server URL (for tRPC)
NEXT_PUBLIC_SERVER_URL=http://localhost:8888/api

# Auth URL (for better-auth) - do NOT include /api suffix
# better-auth automatically appends /api/auth to this URL
NEXT_PUBLIC_AUTH_URL=http://localhost:8888

# Listener URL (for SSE/real-time updates)
NEXT_PUBLIC_LISTENER_URL=http://localhost:8888/listener

# Tunnel proxy URL (for local tunnel WebSocket connections)
NEXT_PUBLIC_TUNNEL_URL=http://localhost:8888/tunnel

# =============================================================================
# OPTIONAL
# =============================================================================

# GitHub App name (for OAuth - optional)
NEXT_PUBLIC_GITHUB_APP_NAME=

# Billing (only for managed deployment)
NEXT_PUBLIC_ENABLE_BILLING=false
