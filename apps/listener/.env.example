# =============================================================================
# LISTENER CONFIGURATION
# =============================================================================

PORT=3002

# Base domain for CORS
BASE_DOMAIN=localhost

# CORS origin for cross-origin requests
CORS_ORIGIN=http://localhost:8888

# =============================================================================
# SERVER COMMUNICATION
# =============================================================================
# The listener calls the server's internal API for database operations

# Server URL (where the main API server is running)
SERVER_URL=http://localhost:8888/api

# Internal API key (must match server's INTERNAL_API_KEY)
INTERNAL_API_KEY=dev-internal-key
