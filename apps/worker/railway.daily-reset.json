{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "turbo build --filter=worker",
    "watchPatterns": [
      "apps/worker/**/*",
      "packages/api/**/*",
      "packages/db/**/*",
      ".env*",
      "turbo.json",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/worker && bun run dist/daily-reset.mjs",
    "cronSchedule": "0 0 * * *"
  }
}

