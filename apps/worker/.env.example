SERVER_URL=

INTERNAL_API_KEY=

# =============================================================================
# DEPLOYMENT MODE
# =============================================================================
# Inherited from deployment config - controls feature flags
#
# self-hosted: Idle reaping only, no quota enforcement
# managed: Full idle reaping + quota enforcement
# =============================================================================

DEPLOYMENT_MODE=self-hosted

# =============================================================================
# FEATURE FLAGS (Override automatic detection)
# =============================================================================

# ENABLE_IDLE_REAPING=true         # Stop idle workspaces (default: true)
# ENABLE_QUOTA_ENFORCEMENT=false   # Stop quota-exceeded workspaces (default: managed mode only)
